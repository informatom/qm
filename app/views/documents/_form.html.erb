<%- model_class = Document -%>
<%= bootstrap_error(@document, model_class ) %>

<%= simple_form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>

  <% if @document.company_id %>
    <%= f.association :company, :disabled => true %>
  <% else %>
    <%= f.association :company, :disabled => true, :selected => current_company.id %>
    <%= f.hidden_field :company_id, :value => current_company.id %>
  <% end %>

  <%= f.input :description, :as => :textile_editor, input_html: {class: :broad} %>
  <%= f.input :internal %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                documents_path, :class => 'btn' %>
  </div>

  <% content_for :javascript do %>
    <%= textile_editor_initialize %>
  <% end %>
<% end %>
