<%- model_class = Substitution -%>
<%= bootstrap_error(@substitution, model_class ) %>

<%= simple_form_for @substitution, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :user, :collection => User.in_company(current_company.id) %>
  <%= f.association :deputy, :collection => User.in_company(current_company.id) %>

  <% if @substitution.company_id %>
    <%= f.association :company, :disabled => true %>
    <%= f.hidden_field :company_id %>
  <% else %>
    <%= f.association :company, :disabled => true, :selected => current_company.id %>
    <%= f.hidden_field :company_id, :value => current_company.id %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                substitutions_path, :class => 'btn' %>
  </div>
<% end %>
