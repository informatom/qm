<%- model_class = BusinessProcessDepartmentAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2) %></h1>
</div>
<table class="table table-striped datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:business_process_id) %></th>
      <th><%= model_class.human_attribute_name(:department_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @business_process_department_assignments.each do |business_process_department_assignment| %>
      <tr>
        <td><%= business_process_department_assignment.business_process.name %></td>
        <td><%= business_process_department_assignment.department.name %></td>
        <td><%=l business_process_department_assignment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => icon("edit")),
                      edit_business_process_department_assignment_path(business_process_department_assignment), 
                      :class => 'btn btn-mini' if can? :edit, business_process_department_assignment %>
          <%= link_to t('.destroy', :default => icon("trash")),
                      business_process_department_assignment_path(business_process_department_assignment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' if can? :delete, business_process_department_assignment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new"), :model => model_class.model_name.human),
            new_business_process_department_assignment_path,
            :class => 'btn btn-primary' if can? :create, BusinessProcessDepartmentAssignment %>

<%= render "shared/datatables_helper" %>