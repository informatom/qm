<%- model_class = News -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2) %></h1>
</div>
<table class="table table-striped datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_by) %></th>
      <th><%= model_class.human_attribute_name(:updated_by) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= link_to news.name, news_path(news) %></td>
        <td><%= created(news) %></td>
        <td><%= updated(news) %></td>
        <td>
          <%= link_to t('.edit', :default => icon("edit")),
                      edit_news_path(news), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => icon("trash")),
                      news_path(news),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new"), :model => model_class.model_name.human),
            new_news_path,
            :class => 'btn btn-primary' %>
<%= link_to t("helpers.news.all"), display_news_index_path, :class => 'btn btn-inverse'  %>
<%= link_to t("helpers.news.your"), latest_news_index_path, :class => 'btn'  %>
<%= render "shared/datatables_helper" %>