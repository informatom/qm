<%- model_class = News -%>
<div class="page-header">
  <h1><%=t("helpers.news.general") %></h1>
</div>

<% if @news.any? %>
  <% @news.each do |news| %>
    <div class="alert alert-info">
      <div class="pull-right muted">
        <%= username(news.updated_by)%>, <%= distance_of_time_in_words_to_now(news.updated_at)%> alt
      </div>
      <h3><%= news.name %></h3>
      <%= textile(news.description) %>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-success">
    Es gibt keine Neuigkeiten seit der letzten Anmeldung
  </div>
  <%= link_to t("helpers.news.all"), display_news_index_path, :class => 'btn btn-primary'  %>
<% end %>
