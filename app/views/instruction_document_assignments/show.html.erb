<%- model_class = InstructionDocumentAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:instruction_id) %>:</strong></dt>
  <dd><%= @instruction_document_assignment.instruction.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_id) %>:</strong></dt>
  <dd><%= @instruction_document_assignment.document.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @instruction_document_assignment.company.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              instruction_document_assignments_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_instruction_document_assignment_path(@instruction_document_assignment), 
              :class => 'btn' if can? :edit, @instruction_document_assignment %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              instruction_document_assignment_path(@instruction_document_assignment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm"))},
              :class => 'btn btn-danger' if can? :delete, @instruction_document_assignment %>
</div>
