<%- model_class = UserFunctionAssignment -%>
<%= bootstrap_error(@user_function_assignment, model_class ) %>

<%= simple_form_for @user_function_assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :user, :collection => User.in_company(current_company.id) %>
  <%= f.association :function, :collection => Function.where(:company_id => current_company.id) %>
  <%= company_field(@user_function_assignment, f) %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_function_assignments_path, :class => 'btn' %>
  </div>
<% end %>
