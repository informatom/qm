<%- model_class = BusinessProcessProcessIndicatorAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2) %></h1>
</div>
<table class="table table-striped datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:business_process_id) %></th>
      <th><%= model_class.human_attribute_name(:process_indicator_id) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @business_process_process_indicator_assignments.each do |business_process_process_indicator_assignment| %>
      <tr>
        <td><%= business_process_process_indicator_assignment.business_process.name %></td>
        <td><%= business_process_process_indicator_assignment.process_indicator.name %></td>
        <td><%= business_process_process_indicator_assignment.company.name %></td>
        <td><%=l business_process_process_indicator_assignment.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => icon("edit")),
                        edit_business_process_process_indicator_assignment_path(business_process_process_indicator_assignment), 
                        :class => 'btn btn-mini' if can? :edit, business_process_process_indicator_assignment %>
          <%= link_to t('.destroy', :default => icon("trash")),
                      business_process_process_indicator_assignment_path(business_process_process_indicator_assignment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' if can? :delete, business_process_process_indicator_assignment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new"), :model => model_class.model_name.human),
            new_business_process_process_indicator_assignment_path,
            :class => 'btn btn-primary' if can? :new, BusinessProcessProcessIndicatorAssignment %>
<%= render "shared/datatables_helper" %>