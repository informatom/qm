<%- model_class = BusinessProcessProcessIndicatorAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:business_process_id) %>:</strong></dt>
  <dd><%= @business_process_process_indicator_assignment.business_process.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:process_indicator_id) %>:</strong></dt>
  <dd><%= @business_process_process_indicator_assignment.process_indicator.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @business_process_process_indicator_assignment.company.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              business_process_process_indicator_assignments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_process_process_indicator_assignment_path(@business_process_process_indicator_assignment), 
              :class => 'btn' if can? :edit, @business_process_process_indicator_assignment %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_process_process_indicator_assignment_path(@business_process_process_indicator_assignment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' if can? :delete, @business_process_process_indicator_assignment %>
</div>
